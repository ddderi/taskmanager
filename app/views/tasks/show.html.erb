<div class="d-flex flex-column align-items-center justify-content-center">
<h1><%= @task.name %> </h1><br>
<h2><%= @task.description %> </h2>


<%= form_for @task, ({controller: 'tasks', action: 'update', method: 'patch'}) do |f| %>

<%= render partial: 'users', locals: {f: f} %>

<%= f.submit 'update', class: "btn btn-outline-secondary" %><br>
<%end%>
<br>
<%= link_to 'All tasks', tasks_path, class: "btn btn-outline-secondary" %>
</div>